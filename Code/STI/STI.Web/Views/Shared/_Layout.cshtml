<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>STI - @ViewData["Title"]</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/STI.Web.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <h1>STI College</h1>
    </header>
    <div class="cstm-container">
        <nav>
            <ul class="cstm-sidebar">
                <li><a asp-area="" asp-controller="Student" asp-action="">Dashboard</a></li>
                <li><a asp-area="" asp-controller="Student" asp-action="">Student</a></li>
            </ul>
        </nav>
        <main role="main">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
            &copy; 2023 - STI.Web - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
